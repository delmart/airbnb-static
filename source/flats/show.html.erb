<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>
<div class="banner_flat" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= flat.picture %>)">
</div>


<div class="header-flat">
  <div class="container padded_flat">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-owner text-center col-md-3">
            <%= image_tag flat.owner_picture, class: "img-circle img-width" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="header-flat-star col-md-9">
            <p><%= flat.summary %></p>
            <p><%= flat.city %></p>
            <div class="stars">
              <ul class="list-inline">
                <li><i class="fa fa-star full_star"></i></li>
                <li><i class="fa fa-star full_star"></i></li>
                <li><i class="fa fa-star full_star"></i></li>
                <li><i class="fa fa-star full_star"></i></li>
                <li><i class="fa fa-star empty_star"></i></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4 form_flat">
        <form action="#">
          <h4>Book this flat</h3>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkin" id="checkin">
                </div>
                <div class="col-xs-6">
                  <input type="text" class="form-control" placeholder="checkout">
                </div>
              </div>
            </div>
            <div class="form-group">
              <select name="" id="guests" class="form-control">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
              </select>
            </div>
            <input type="submit" class="btn btn-primary btn-flat" value="RÃ©server">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="flat-description">
  <div class="container padded_flat">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>About this flat</h2>
        <p><%= flat.summary %></p>

        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            The Space
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Accommodates:  <strong>2</strong></li>
              <li>Bathrooms:  <strong><%= flat.Bathrooms %></strong></li>
              <li>Bed type:  <strong>Real Bed</strong></li>
              <li>maximum number of guests: <strong><%= flat.maximum_number_of_guests %></strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Beds: <strong><%= flat.Bed %></strong></li>
              <li>Property type: <strong>Apartment</strong></li>
            </ul>
          </div>
        </div>
        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            Amenities
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fa fa-cutlery"></i><strong>Kitchen</strong></li>
              <li><i class="fa fa-wifi"></i><strong>Wifi</strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fa fa-desktop"></i><strong>TV</strong></li>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>


